    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ono_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="off-to-red-light.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar_speed"
        android:layout_alignTop="@+id/seekBar_speed"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:gravity="center_horizontal"
        android:text="Lower"
        android:textStyle="italic"
        android:textColor="#fff" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/seekBar_speed"
        android:layout_alignTop="@+id/seekBar_speed"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal"
        android:text="Faster"
        android:textStyle="italic"
        android:textColor="#fff"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/textView_cpattern"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/loading_pattern"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_corner_white"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical|center_horizontal"
        android:tag="1"
        android:text="Constant"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView_lock"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/loading_pattern"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:tooltipText="UnLock"
        app:srcCompat="@drawable/unlock" />

    <TextView
        android:id="@+id/textView_comment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-medium"
        android:text="Click"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold|italic" />




    <ImageView
        android:id="@+id/imageView_bar"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_corner_title"
        >

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageView_bar"
        android:layout_alignLeft="@+id/imageView_bar"
        android:layout_alignTop="@+id/imageView_bar"
        android:layout_alignBottom="@+id/imageView_bar"
        android:layout_alignRight="@+id/imageView_bar"
        android:paddingLeft="20dp"
        android:paddingRight="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pattern1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="Constant"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pattern2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:text="Light"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/pattern3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:text="Medium"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/pattern4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:text="Deep"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="23dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pattern_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_white"
        android:fontFamily="sans-serif-condensed"
        android:text="Vibration Patterns"
        android:textAlignment="center"
        android:textColor="#ff74a4"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignTop="@id/imageView_bar"
        android:layout_marginTop="-10dp"
        android:gravity="center_horizontal" />



    <SeekBar
        android:id="@+id/seekBar_speed"
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imageView_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="80dp"
        android:thumb="@drawable/custom_thumb"
        android:progressDrawable="@drawable/rounded_corner_red"
        android:max="100"
        android:min="0"
        android:progress="50" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBar_speed"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_corner_white"
        android:fontFamily="sans-serif-condensed"
        android:text="Vibration Speed"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ff74a4"
        android:textSize="15dp"
        android:gravity="center_horizontal" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>


</RelativeLayout>